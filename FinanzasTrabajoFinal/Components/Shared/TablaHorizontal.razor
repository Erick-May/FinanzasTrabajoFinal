@using FinanzasTrabajoFinal.MODELS

<h4 class="mt-3">@Titulo</h4>

<div class="table-responsive">
    <table class="table table-striped table-hover table-sm">
        <thead class="table-light">
            <tr>
                <th>Concepto</th>
                <th class="text-end">Periodo</th>
                <th class="text-end">Var. Absoluta (C$)</th>
                <th class="text-end">Var. Relativa (%)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Resultados)
            {
                <tr>
                    <td>@item.Concepto</td>
                    <td class="text-end">@Periodo</td>
                    <td class="text-end @(item.VariacionAbsoluta < 0 ? "text-danger" : "text-success")">
                        @item.VariacionAbsoluta.ToString("N2")
                    </td>
                    <td class="text-end @(item.VariacionRelativa < 0 ? "text-danger" : "text-success")">
                        @item.VariacionRelativa.ToString("P2")
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@code {
    [Parameter]
    public string Titulo { get; set; } = "Resultados";

    [Parameter]
    public string Periodo { get; set; } = "";

    [Parameter]
    public List<ResultadoHorizontal> Resultados { get; set; } = new();
}