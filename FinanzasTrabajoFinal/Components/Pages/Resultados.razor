@page "/resultados/{IdAnalisis:int}"
@rendermode InteractiveServer

@using FinanzasTrabajoFinal.MODELS
@using FinanzasTrabajoFinal.Service
@using Microsoft.EntityFrameworkCore
@using System.Globalization
@using System.Data

@inject IDbContextFactory<FinanzasContext> DbFactory

<PageTitle>Resultados del Análisis</PageTitle>

@if (isLoading)
{
    <div class="text-center p-5">
        <div class="spinner-border text-primary" role="status" style="width: 3rem; height: 3rem;">
            <span class="visually-hidden">Cargando análisis...</span>
        </div>
        <h4 class="mt-3">Cargando resultados...</h4>
    </div>
}
else if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger">
        <h3>Error al Cargar el Análisis</h3>
        <p>@errorMessage</p>
        <a href="/">Volver al inicio</a>
    </div>
}
else if (analisis == null)
{
    <div class="alert alert-warning">
        <h3>Análisis no encontrado</h3>
        <p>No se encontró el análisis con ID @IdAnalisis.</p>
        <a href="/">Volver al inicio</a>
    </div>
}
else
{
    <div class="container-fluid">
        <div class="row mb-3">
            <div class="col">
                <h3>Resultados del Análisis</h3>
                <h5 class="text-muted">Archivo: @analisis.NombreArchivo</h5>
                <p class="text-muted small">Fecha: @analisis.FechaAnalisis.ToString("g")</p>
            </div>
            <div class="col-auto">
                <a href="/" class="btn btn-outline-secondary">Volver al Inicio</a>
            </div>
        </div>

        <ul class="nav nav-tabs">
            <li class="nav-item">
                <button class="@GetButtonClass("vertical-bg")" @onclick="@(() => SetActiveTab("vertical-bg"))" type="button">Vertical (BG)</button>
            </li>
            <li class="nav-item">
                <button class="@GetButtonClass("vertical-er")" @onclick="@(() => SetActiveTab("vertical-er"))" type="button">Vertical (ER)</button>
            </li>
            <li class="nav-item">
                <button class="@GetButtonClass("horizontal-bg")" @onclick="@(() => SetActiveTab("horizontal-bg"))" type="button">Horizontal (BG)</button>
            </li>
            <li class="nav-item">
                <button class="@GetButtonClass("cnt")" @onclick="@(() => SetActiveTab("cnt"))" type="button">Capital de Trabajo (CNT)</button>
            </li>
        </ul>

        <div class="tab-content">

            <div class="@GetPaneClass("vertical-bg")">
                <TablaResultados Titulo="Análisis Vertical - Balance General"
                                 Anios="anios"
                                 Resultados="resultadosVerticalesBG"
                                 EsPorcentaje="true" />
            </div>

            <div class="@GetPaneClass("vertical-er")">
                <TablaResultados Titulo="Análisis Vertical - Estado de Resultados"
                                 Anios="anios"
                                 Resultados="resultadosVerticalesER"
                                 EsPorcentaje="true" />
            </div>

            <div class="@GetPaneClass("horizontal-bg")">
                <TablaHorizontal Titulo="Análisis Horizontal - Balance General"
                                 Periodo="@($"{anioAnterior} - {anioActual}")"
                                 Resultados="resultadosHorizontalesBG" />
            </div>

            <div class="@GetPaneClass("cnt") p-3">
                <h4 class="mt-2">Capital Neto de Trabajo (CNT)</h4>
                <p>Calculado como: (Total Activo Circulante - Total Pasivo Circulante)</p>
                <table class="table table-sm table-bordered" style="max-width: 600px;">
                    <thead class="table-light">
                        <tr>
                            <th>Año</th>
                            <th>Valor (C$)</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in capitalesNetos.OrderBy(r => r.Anio))
                        {
                            <tr>
                                <td>@item.Anio</td>
                                <td>@item.CNT.ToString("N2")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </div>
}

@code {
    [Parameter]
    public int IdAnalisis { get; set; }

    private AnalisisFinanciero? analisis;
    private bool isLoading = true;
    private string errorMessage = "";
    private List<int> anios = new();
    private int anioAnterior, anioActual;

    private List<ResultadoCalculado> resultadosVerticalesBG = new();
    private List<ResultadoCalculado> resultadosVerticalesER = new();
    private List<ResultadoHorizontal> resultadosHorizontalesBG = new();
    private List<CapitalesNetos> capitalesNetos = new();

    // --- AÑADIDO: CÓDIGO PARA CONTROLAR LAS PESTAÑAS (TABS) ---
    private string activeTabId = "vertical-bg"; // ID de la pestaña activa por defecto

    // Método para cambiar la pestaña activa
    private void SetActiveTab(string tabId)
    {
        activeTabId = tabId;
    }

    // Método para darle la clase CSS correcta al BOTÓN
    private string GetButtonClass(string tabId)
    {
        return tabId == activeTabId ? "nav-link active" : "nav-link";
    }

    // Método para darle la clase CSS correcta al CONTENIDO
    private string GetPaneClass(string tabId)
    {
        return tabId == activeTabId ? "tab-pane fade show active" : "tab-pane fade";
    }
    // --- FIN DEL CÓDIGO AÑADIDO ---


    // --- ESTE ES EL MÉTODO ORIGINAL, PERO ARREGLADO ---
    protected override async Task OnInitializedAsync()
    {
        try
        {
            // Usamos UNA SOLA CONEXIÓN, como al principio
            await using var db = await DbFactory.CreateDbContextAsync();

            analisis = await db.AnalisisFinancieros
                .FirstOrDefaultAsync(a => a.IdAnalisis == IdAnalisis);

            if (analisis == null)
            {
                isLoading = false;
                return;
            }

            // 1. Cargar Años
            var aniosVertical = await db.ResultadoVerticales
                .Where(r => r.IdAnalisis == IdAnalisis)
                .Select(r => r.Anio)
                .Distinct()
                .OrderBy(a => a)
                .ToListAsync();

            if (!aniosVertical.Any())
            {
                // Si no hay verticales, busca en CNT
                var aniosCNT = await db.CapitalesNetos
                    .Where(r => r.IdAnalisis == IdAnalisis)
                    .Select(r => r.Anio)
                    .Distinct()
                    .OrderBy(a => a)
                    .ToListAsync();

                if (!aniosCNT.Any())
                {
                    throw new Exception("No se encontraron datos calculados (Verticales o CNT) para este análisis.");
                }
                anios = aniosCNT;
            }
            else
            {
                anios = aniosVertical;
            }

            // (Asignar años)
            if (anios.Count == 1)
            {
                anioAnterior = anios.First();
                anioActual = anios.First();
            }
            else
            {
                anioAnterior = anios.First();
                anioActual = anios.Last();
            }

            // --- 2. LEER LOS CÁLCULOS (Todo en la misma conexión) ---

            // --- 2a. ANÁLISIS VERTICAL (ER) ---
            var verticalERData = await db.ResultadoVerticales
                .Where(r => r.IdAnalisis == IdAnalisis && r.TipoEstado == "ER")
                .ToListAsync();

            resultadosVerticalesER = verticalERData
                .GroupBy(r => r.Concepto.Trim())
                .Select(g => new ResultadoCalculado
                {
                    Concepto = g.Key,
                    // *** ¡LA CORRECCIÓN CLAVE QUE SÍ FUNCIONÓ! ***
                    ValoresPorAnio = g.GroupBy(r => r.Anio).ToDictionary(g_anio => g_anio.Key, g_anio => g_anio.First().Porcentaje)
                }).ToList();

            // --- 2b. ANÁLISIS VERTICAL (BG) ---
            var verticalBGData = await db.ResultadoVerticales
                .Where(r => r.IdAnalisis == IdAnalisis && r.TipoEstado == "BG")
                .ToListAsync();

            resultadosVerticalesBG = verticalBGData
                .GroupBy(r => r.Concepto.Trim())
                .Select(g => new ResultadoCalculado
                {
                    Concepto = g.Key,
                    // *** ¡LA CORRECCIÓN CLAVE QUE SÍ FUNCIONÓ! ***
                    ValoresPorAnio = g.GroupBy(r => r.Anio).ToDictionary(g_anio => g_anio.Key, g_anio => g_anio.First().Porcentaje)
                }).ToList();

            // --- 2c. ANÁLISIS HORIZONTAL (BG) ---
            if (anios.Count >= 2)
            {
                resultadosHorizontalesBG = await db.ResultadoHorizontales
                    .Where(r => r.IdAnalisis == IdAnalisis && r.TipoEstado == "BG")
                    .ToListAsync();
            }

            // --- 2d. CÁLCULO DE CNT ---
            capitalesNetos = await db.CapitalesNetos
                .Where(r => r.IdAnalisis == IdAnalisis)
                .ToListAsync();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error al cargar los resultados: {ex.Message} | DETALLE: {ex.InnerException?.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }
}