@page "/resultados/{IdAnalisis:int}"
@rendermode InteractiveServer

@using FinanzasTrabajoFinal.MODELS
@using FinanzasTrabajoFinal.Service
@using Microsoft.EntityFrameworkCore
@using System.Globalization
@using System.Data

@inject IDbContextFactory<FinanzasContext> DbFactory

<PageTitle>Resultados del Análisis</PageTitle>

@if (isLoading)
{
    <div class="text-center p-5">
        <div class="spinner-border text-primary" role="status" style="width: 3rem; height: 3rem;">
            <span class="visually-hidden">Cargando análisis...</span>
        </div>
        <h4 class="mt-3">Calculando resultados...</h4>
    </div>
}
else if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger">
        <h3>Error al Cargar el Análisis</h3>
        <p>@errorMessage</p>
        <a href="/">Volver al inicio</a>
    </div>
}
else if (analisis == null)
{
    <div class="alert alert-warning">
        <h3>Análisis no encontrado</h3>
        <p>No se encontró el análisis con ID @IdAnalisis.</p>
        <a href="/">Volver al inicio</a>
    </div>
}
else
{
    <div class="container-fluid">
        <div class="row mb-3">
            <div class="col">
                <h3>Resultados del Análisis</h3>
                <h5 class="text-muted">Archivo: @analisis.NombreArchivo</h5>
                <p class="text-muted small">Fecha: @analisis.FechaAnalisis.ToString("g")</p>
            </div>
            <div class="col-auto">
                <a href="/" class="btn btn-outline-secondary">Volver al Inicio</a>
            </div>
        </div>

        <ul class="nav nav-tabs" id="analisisTabs" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="vertical-bg-tab" data-bs-toggle="tab" data-bs-target="#vertical-bg" type="button" role="tab" aria-controls="vertical-bg" aria-selected="true">Vertical (BG)</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="vertical-er-tab" data-bs-toggle="tab" data-bs-target="#vertical-er" type="button" role="tab" aria-controls="vertical-er" aria-selected="false">Vertical (ER)</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="horizontal-bg-tab" data-bs-toggle="tab" data-bs-target="#horizontal-bg" type="button" role="tab" aria-controls="horizontal-bg" aria-selected="false">Horizontal (BG)</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="cnt-tab" data-bs-toggle="tab" data-bs-target="#cnt" type="button" role="tab" aria-controls="cnt" aria-selected="false">Capital de Trabajo (CNT)</button>
            </li>
        </ul>

        <div class="tab-content" id="analisisTabsContent">

            <div class="tab-pane fade show active" id="vertical-bg" role="tabpanel" aria-labelledby="vertical-bg-tab">
                <TablaResultados Titulo="Análisis Vertical - Balance General"
                                 Años="anios"
                                 Resultados="resultadosVerticalesBG"
                                 EsPorcentaje="true" />
            </div>

            <div class="tab-pane fade" id="vertical-er" role="tabpanel" aria-labelledby="vertical-er-tab">
                <TablaResultados Titulo="Análisis Vertical - Estado de Resultados"
                                 Años="anios"
                                 Resultados="resultadosVerticalesER"
                                 EsPorcentaje="true" />
            </div>

            <div class="tab-pane fade" id="horizontal-bg" role="tabpanel" aria-labelledby="horizontal-bg-tab">
                <TablaHorizontal Titulo="Análisis Horizontal - Balance General"
                                 Periodo="@($"{anioAnterior} - {anioActual}")"
                                 Resultados="resultadosHorizontalesBG" />
            </div>

            <div class="tab-pane fade p-3" id="cnt" role="tabpanel" aria-labelledby="cnt-tab">
                <h4 class="mt-2">Capital Neto de Trabajo (CNT)</h4>
                <p>Calculado como: (Total Activo Circulante - Total Pasivo Circulante)</p>
                <table class="table table-sm table-bordered" style="max-width: 600px;">
                    <thead class="table-light">
                        <tr>
                            <th>Año</th>
                            <th>Valor (C$)</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var ratio in capitalDeTrabajo.OrderBy(r => r.Anio))
                        {
                            <tr>
                                <td>@ratio.Anio</td>
                                <td>@ratio.ValorRazon.ToString("N2")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}

@code {
    [Parameter]
    public int IdAnalisis { get; set; }

    private AnalisisFinanciero? analisis;
    private bool isLoading = true;
    private string errorMessage = "";

    private List<int> anios = new();
    private int anioAnterior, anioActual;

    private List<ResultadoCalculado> resultadosVerticalesBG = new();
    private List<ResultadoCalculado> resultadosVerticalesER = new();
    private List<ResultadoHorizontal> resultadosHorizontalesBG = new();
    private List<RazonFinanciera> capitalDeTrabajo = new();

    private CultureInfo culture = new CultureInfo("es-ES");

    protected override async Task OnInitializedAsync()
    {
        try
        {
            await using var db = await DbFactory.CreateDbContextAsync();

            analisis = await db.AnalisisFinancieros
                .FirstOrDefaultAsync(a => a.IdAnalisis == IdAnalisis);

            if (analisis == null)
            {
                isLoading = false;
                return;
            }

            var conceptosBG = await db.BGConceptos
                .Where(c => c.IdAnalisis == IdAnalisis)
                .OrderBy(c => c.IdBgConcepto)
                .ToListAsync();

            var conceptosER = await db.ERConceptos
                .Where(c => c.IdAnalisis == IdAnalisis)
                .OrderBy(c => c.IdErConcepto)
                .ToListAsync();

            if (!conceptosBG.Any() || !conceptosER.Any())
            {
                throw new Exception("No se encontraron datos de BG o ER para este análisis. El archivo podría estar corrupto o vacío.");
            }

            anios = conceptosBG.Select(c => c.Anio).Distinct().OrderBy(a => a).ToList();
            if (anios.Count == 0)
            {
                throw new Exception("No se encontraron años en los datos del BG.");
            }
            else if (anios.Count == 1)
            {
                anioAnterior = anios.First();
                anioActual = anios.First();
            }
            else
            {
                anioAnterior = anios.First();
                anioActual = anios.Last();
            }

            // --- 3. HACER LOS CÁLCULOS ---

            // --- 3a. ANÁLISIS VERTICAL (ER) ---

            // **** ¡AQUÍ ESTÁ EL ARREGLO! ****
            // Agregamos .Trim() para limpiar cualquier espacio basura de la BD
            var ventasNetas = conceptosER
                .Where(c => c.Concepto.Trim().Equals("Ingresos", StringComparison.OrdinalIgnoreCase))
                .ToDictionary(c => c.Anio, c => c.Valor);

            if (!ventasNetas.Any()) { throw new Exception("No se encontró la cuenta 'Ingresos' (después de Trim) para el Análisis Vertical del ER."); }

            resultadosVerticalesER = conceptosER
                .GroupBy(c => c.Concepto)
                .Select(g => new ResultadoCalculado
                {
                    Concepto = g.Key,
                    ValoresPorAnio = g.ToDictionary(
                        c => c.Anio,
                        c =>
                        {
                            decimal baseVentas = ventasNetas.GetValueOrDefault(c.Anio);
                            return (baseVentas == 0) ? 0 : (c.Valor / baseVentas); // (Valor / Ventas Netas)
                        }
                    )
                }).ToList();

            // --- 3b. ANÁLISIS VERTICAL (BG) ---

            // **** ¡ARREGLO AQUÍ TAMBIÉN! ****
            var totalActivos = conceptosBG
                .Where(c => c.Concepto.Trim().Equals("Total Activos", StringComparison.OrdinalIgnoreCase))
                .ToDictionary(c => c.Anio, c => c.Valor);
            if (!totalActivos.Any()) { throw new Exception("No se encontró la cuenta 'Total Activos' (después de Trim) para el Análisis Vertical del BG."); }

            // **** ¡Y ARREGLO AQUÍ! ****
            var totalPasCap = conceptosBG
                .Where(c => c.Concepto.Trim().Equals("Total Pasivos y Capital", StringComparison.OrdinalIgnoreCase))
                .ToDictionary(c => c.Anio, c => c.Valor);
            if (!totalPasCap.Any()) { throw new Exception("No se encontró la cuenta 'Total Pasivos y Capital' (después de Trim) para el Análisis Vertical del BG."); }

            resultadosVerticalesBG = conceptosBG
                .GroupBy(c => c.Concepto)
                .Select(g => new ResultadoCalculado
                {
                    Concepto = g.Key,
                    ValoresPorAnio = g.ToDictionary(
                        c => c.Anio,
                        c =>
                        {
                            decimal baseValor = (g.First().Tipo == "ACTIVO")
                                ? totalActivos.GetValueOrDefault(c.Anio)
                                : totalPasCap.GetValueOrDefault(c.Anio);
                            return (baseValor == 0) ? 0 : (c.Valor / baseValor); // (Valor / Base)
                        }
            )
                }).ToList();

            // --- 3c. ANÁLISIS HORIZONTAL (BG) ---
            if (anios.Count >= 2)
            {
                resultadosHorizontalesBG = conceptosBG
                    .GroupBy(c => c.Concepto)
                    .Select(g =>
                    {
                        var valorAnterior = g.FirstOrDefault(c => c.Anio == anioAnterior)?.Valor ?? 0;
                        var valorActual = g.FirstOrDefault(c => c.Anio == anioActual)?.Valor ?? 0;

                        return new ResultadoHorizontal
                        {
                            Concepto = g.Key,
                            VariacionAbsoluta = valorActual - valorAnterior,
                            VariacionRelativa = (valorAnterior == 0) ? 0 : ((valorActual / valorAnterior) - 1)
                        };
                    }).ToList();
            }

            // --- 3d. CÁLCULO DE CNT ---

            // **** ¡ARREGLO AQUÍ! ****
            var actCirculante = conceptosBG
                .Where(c => c.Concepto.Trim().Equals("Total Activo Circulante", StringComparison.OrdinalIgnoreCase))
                .ToDictionary(c => c.Anio, c => c.Valor);
            if (!actCirculante.Any()) { throw new Exception("No se encontró la cuenta 'Total Activo Circulante' (después de Trim) para el CNT."); }

            // **** ¡Y ARREGLO AQUÍ! ****
            var pasCirculante = conceptosBG
                .Where(c => c.Concepto.Trim().Equals("Total Pasivo Circulante", StringComparison.OrdinalIgnoreCase))
                .ToDictionary(c => c.Anio, c => c.Valor);
            if (!pasCirculante.Any()) { throw new Exception("No se encontró la cuenta 'Total Pasivo Circulante' (después de Trim) para el CNT."); }

            foreach (var anio in anios)
            {
                capitalDeTrabajo.Add(new RazonFinanciera
                {
                    Anio = anio,
                    ValorRazon = actCirculante.GetValueOrDefault(anio) - pasCirculante.GetValueOrDefault(anio)
                });
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error al calcular los resultados: {ex.Message} | DETALLE: {ex.InnerException?.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    // --- MÉTODOS AYUDANTES (DEJÉ SOLO LOS QUE SÍ USAMOS) ---

    private string SafeGetString(DataRow row, int colIndex)
    {
        if (colIndex < 0 || colIndex >= row.Table.Columns.Count || row.IsNull(colIndex))
            return string.Empty;
        var cellValue = row[colIndex];
        return cellValue.ToString().Trim();
    }

    private decimal SafeGetDecimal(DataRow row, int colIndex, CultureInfo culture)
    {
        if (colIndex < 0 || colIndex >= row.Table.Columns.Count || row.IsNull(colIndex))
            return 0m;

        var cellValue = row[colIndex];
        if (cellValue is double dValue) { return (decimal)dValue; }
        if (cellValue is int iValue) { return (decimal)iValue; }
        if (cellValue is long lValue) { return (decimal)lValue; }

        string valueStr = cellValue.ToString().Trim();
        if (string.IsNullOrWhiteSpace(valueStr))
            return 0m;

        valueStr = valueStr.Replace("C$", "").Replace("(", "-").Replace(")", "").Trim();

        if (decimal.TryParse(valueStr, NumberStyles.Any, culture, out decimal result))
        {
            return result;
        }

        if (decimal.TryParse(valueStr, NumberStyles.Number, CultureInfo.InvariantCulture, out result))
        {
            return result;
        }

        return 0m;
    }
}