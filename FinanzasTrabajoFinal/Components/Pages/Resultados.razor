@page "/resultados/{IdAnalisis:int}"
@rendermode InteractiveServer

@using FinanzasTrabajoFinal.MODELS
@using FinanzasTrabajoFinal.Service
@using Microsoft.EntityFrameworkCore
@using System.Globalization
@using System.Data

@inject IDbContextFactory<FinanzasContext> DbFactory

<PageTitle>Resultados del Análisis</PageTitle>

@if (isLoading)
{
    <div class="text-center p-5">
        <div class="spinner-border text-primary" role="status" style="width: 3rem; height: 3rem;">
            <span class="visually-hidden">Cargando análisis...</span>
        </div>
        <h4 class="mt-3">Cargando resultados...</h4>
    </div>
}
else if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger">
        <h3>Error al Cargar el Análisis</h3>
        <p>@errorMessage</p>
        <a href="/">Volver al inicio</a>
    </div>
}
else if (analisis == null)
{
    <div class="alert alert-warning">
        <h3>Análisis no encontrado</h3>
        <p>No se encontró el análisis con ID @IdAnalisis.</p>
        <a href="/">Volver al inicio</a>
    </div>
}
else
{
    <div class="container-fluid">
        <div class="row mb-3">
            <div class="col">
                <h3>Resultados del Análisis</h3>
                <h5 class="text-muted">Archivo: @analisis.NombreArchivo</h5>
                <p class="text-muted small">Fecha: @analisis.FechaAnalisis.ToString("g")</p>
            </div>
            <div class="col-auto">
                <a href="/" class="btn btn-outline-secondary">Volver al Inicio</a>
            </div>
        </div>

        <ul class="nav nav-tabs">
            <li class="nav-item">
                <button class="@GetButtonClass("vertical-bg")" @onclick="@(() => SetActiveTab("vertical-bg"))" type="button">Vertical (BG)</button>
            </li>
            <li class="nav-item">
                <button class="@GetButtonClass("vertical-er")" @onclick="@(() => SetActiveTab("vertical-er"))" type="button">Vertical (ER)</button>
            </li>
            <li class="nav-item">
                <button class="@GetButtonClass("horizontal-bg")" @onclick="@(() => SetActiveTab("horizontal-bg"))" type="button">Horizontal (BG)</button>
            </li>
            <li class="nav-item">
                <button class="@GetButtonClass("cnt")" @onclick="@(() => SetActiveTab("cnt"))" type="button">CNT y CNO</button>
            </li>
            <li class="nav-item">
                <button class="@GetButtonClass("eoaf")" @onclick="@(() => SetActiveTab("eoaf"))" type="button">Origen y Aplicación</button>
            </li>
            <li class="nav-item">
                <button class="@GetButtonClass("razones")" @onclick="@(() => SetActiveTab("razones"))" type="button">Razones Financieras</button>
            </li>
        </ul>

        <div class="tab-content">

            <div class="@GetPaneClass("vertical-bg")">
                <TablaResultados Titulo="Análisis Vertical - Balance General"
                                 Anios="anios"
                                 Resultados="resultadosVerticalesBG"
                                 EsPorcentaje="true" />
            </div>

            <div class="@GetPaneClass("vertical-er")">
                <TablaResultados Titulo="Análisis Vertical - Estado de Resultados"
                                 Anios="anios"
                                 Resultados="resultadosVerticalesER"
                                 EsPorcentaje="true" />
            </div>

            <div class="@GetPaneClass("horizontal-bg")">
                <TablaHorizontal Titulo="Análisis Horizontal - Balance General"
                                 Periodo="@($"{anioAnterior} - {anioActual}")"
                                 Resultados="resultadosHorizontalesBG" />
            </div>

            <div class="@GetPaneClass("cnt") p-3">

                <h4 class="mt-2">Capital Neto de Trabajo (CNT) y Operativo (CNO)</h4>

                <p class="mb-1"><b>CNT:</b> (Total Activo Circulante - Total Pasivo Circulante)</p>
                <p><b>CNO:</b> (Cuentas por Cobrar + Inventarios) - (Cuentas por Pagar - Documentos por Pagar)</p>

                <table class="table table-sm table-bordered" style="max-width: 600px;">
                    <thead class="table-light">
                        <tr>
                            <th>Año</th>
                            <th class="text-end">CNT (C$)</th>
                            <th class="text-end">CNO (C$)</th>
                        </tr>
                    </thead>
                    <tbody>
                        @* Usamos la variable 'capitalesNetos' que ya se carga en el @code *@
                        @foreach (var item in capitalesNetos.OrderBy(r => r.Anio))
                        {
                            <tr>
                                <td>@item.Anio</td>
                                <td class="text-end">@item.CNT.ToString("N2")</td>

                                <td class="text-end">@item.CNO?.ToString("N2")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="@GetPaneClass("eoaf") p-3">
                <h4 class="mt-2">Estado de Origen y Aplicación de Fondos (EOAF)</h4>

                <div class="row">
                    <div class="col-md-6">
                        <table class="table table-sm table-striped">
                            <thead class="table-light">
                                <tr>
                                    <th>Orígenes de Fondos</th>
                                    <th class="text-end">Valor (C$)</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in origenes)
                                {
                                    <tr>
                                        <td>@item.Concepto</td>
                                        <td class="text-end">@item.Valor.ToString("N2")</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot class="table-light">
                                <tr>
                                    <td><strong>Total Orígenes</strong></td>
                                    <td class="text-end"><strong>@totalOrigenes.ToString("N2")</strong></td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>

                    <div class="col-md-6">
                        <table class="table table-sm table-striped">
                            <thead class="table-light">
                                <tr>
                                    <th>Aplicaciones de Fondos</th>
                                    <th class="text-end">Valor (C$)</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in aplicaciones)
                                {
                                    <tr>
                                        <td>@item.Concepto</td>
                                        <td class="text-end">@item.Valor.ToString("N2")</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot class="table-light">
                                <tr>
                                    <td><strong>Total Aplicaciones</strong></td>
                                    <td class="text-end"><strong>@totalAplicaciones.ToString("N2")</strong></td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>

            <div class="@GetPaneClass("razones") p-3">

                @if (!aniosRazones.Any())
                {
                    <div class="alert alert-warning mt-3">No hay datos suficientes (BG y ER del mismo año) para calcular las razones financieras.</div>
                }
                else
                {
                    <TablaResultados Titulo="Razones de Liquidez"
                                     Anios="aniosRazones"
                                     Resultados="razonesLiquidez"
                                     EsPorcentaje="false" />

                    <TablaResultados Titulo="Razones de Actividad"
                                     Anios="aniosRazones"
                                     Resultados="razonesActividad"
                                     EsPorcentaje="false" />

                    <TablaResultados Titulo="Razones de Endeudamiento"
                                     Anios="aniosRazones"
                                     Resultados="razonesEndeudamiento"
                                     EsPorcentaje="false" />

                    <TablaResultados Titulo="Razones de Rentabilidad"
                                     Anios="aniosRazones"
                                     Resultados="razonesRentabilidad"
                                     EsPorcentaje="true" />
                }
            </div>
        </div>
    </div>
}

@code {
    [Parameter]
    public int IdAnalisis { get; set; }

    private AnalisisFinanciero? analisis;
    private bool isLoading = true;
    private string errorMessage = "";
    private List<int> anios = new();
    private int anioAnterior, anioActual;

    // --- Listas para los cálculos ---
    private List<ResultadoCalculado> resultadosVerticalesBG = new();
    private List<ResultadoCalculado> resultadosVerticalesER = new();
    private List<ResultadoHorizontal> resultadosHorizontalesBG = new();
    private List<CapitalesNetos> capitalesNetos = new();
    private List<OrigenAplicacion> origenes = new();
    private List<OrigenAplicacion> aplicaciones = new();
    private decimal totalOrigenes = 0m;
    private decimal totalAplicaciones = 0m;

    // ++++++ NUEVAS VARIABLES PARA RAZONES ++++++
    private List<int> aniosRazones = new();
    private List<ResultadoCalculado> razonesLiquidez = new();
    private List<ResultadoCalculado> razonesActividad = new();
    private List<ResultadoCalculado> razonesEndeudamiento = new();
    private List<ResultadoCalculado> razonesRentabilidad = new();


    // --- CÓDIGO PARA CONTROLAR LAS PESTAÑAS (TABS) ---
    private string activeTabId = "vertical-bg"; // ID de la pestaña activa por defecto

    private void SetActiveTab(string tabId)
    {
        activeTabId = tabId;
    }

    private string GetButtonClass(string tabId)
    {
        return tabId == activeTabId ? "nav-link active" : "nav-link";
    }

    private string GetPaneClass(string tabId)
    {
        return tabId == activeTabId ? "tab-pane fade show active" : "tab-pane fade";
    }
    // --- FIN DEL CÓDIGO DE PESTAÑAS ---


    // --- MÉTODO DE CARGA DE DATOS ---
    protected override async Task OnInitializedAsync()
    {
        try
        {
            await using var db = await DbFactory.CreateDbContextAsync();

            analisis = await db.AnalisisFinancieros
                .FirstOrDefaultAsync(a => a.IdAnalisis == IdAnalisis);

            if (analisis == null)
            {
                isLoading = false;
                return;
            }

            // 1. Cargar Años (Verticales o CNT)
            var aniosVertical = await db.ResultadoVerticales
                .Where(r => r.IdAnalisis == IdAnalisis)
                .Select(r => r.Anio)
                .Distinct()
                .OrderBy(a => a)
                .ToListAsync();

            if (!aniosVertical.Any())
            {
                var aniosCNT = await db.CapitalesNetos
                    .Where(r => r.IdAnalisis == IdAnalisis)
                    .Select(r => r.Anio)
                    .Distinct()
                    .OrderBy(a => a)
                    .ToListAsync();

                if (!aniosCNT.Any())
                {
                    throw new Exception("No se encontraron datos calculados (Verticales o CNT) para este análisis.");
                }
                anios = aniosCNT;
            }
            else
            {
                anios = aniosVertical;
            }

            // Asignar años para Horizontal
            if (anios.Count == 1)
            {
                anioAnterior = anios.First();
                anioActual = anios.First();
            }
            else
            {
                anioAnterior = anios.First();
                anioActual = anios.Last();
            }

            // --- 2. LEER LOS CÁLCULOS (Todo en la misma conexión) ---

            // --- 2a. ANÁLISIS VERTICAL (ER) ---
            var verticalERData = await db.ResultadoVerticales
                .Where(r => r.IdAnalisis == IdAnalisis && r.TipoEstado == "ER")
                .ToListAsync();

            resultadosVerticalesER = verticalERData
                .GroupBy(r => r.Concepto.Trim())
                .Select(g => new ResultadoCalculado
                {
                    Concepto = g.Key,
                    ValoresPorAnio = g.GroupBy(r => r.Anio).ToDictionary(g_anio => g_anio.Key, g_anio => g_anio.First().Porcentaje)
                }).ToList();

            // --- 2b. ANÁLISIS VERTICAL (BG) ---
            var verticalBGData = await db.ResultadoVerticales
                .Where(r => r.IdAnalisis == IdAnalisis && r.TipoEstado == "BG")
                .ToListAsync();

            resultadosVerticalesBG = verticalBGData
                .GroupBy(r => r.Concepto.Trim())
                .Select(g => new ResultadoCalculado
                {
                    Concepto = g.Key,
                    ValoresPorAnio = g.GroupBy(r => r.Anio).ToDictionary(g_anio => g_anio.Key, g_anio => g_anio.First().Porcentaje)
                }).ToList();

            // --- 2c. ANÁLISIS HORIZONTAL (BG) ---
            if (anios.Count >= 2)
            {
                resultadosHorizontalesBG = await db.ResultadoHorizontales
                    .Where(r => r.IdAnalisis == IdAnalisis && r.TipoEstado == "BG")
                    .ToListAsync();
            }

            // --- 2d. CÁLCULO DE CNT ---
            capitalesNetos = await db.CapitalesNetos
                .Where(r => r.IdAnalisis == IdAnalisis)
                .ToListAsync();

            // --- 2e. CÁLCULO DE EOAF ---
            var eoafData = await db.OrigenAplicaciones
                .Where(r => r.IdAnalisis == IdAnalisis)
                .ToListAsync();

            origenes = eoafData.Where(e => e.Flujo == "ORIGEN").OrderBy(e => e.Concepto).ToList();
            aplicaciones = eoafData.Where(e => e.Flujo == "APLICACION").OrderBy(e => e.Concepto).ToList();

            totalOrigenes = origenes.Sum(e => e.Valor);
            totalAplicaciones = aplicaciones.Sum(e => e.Valor);

            // ++++++ NUEVO CÓDIGO DE CARGA PARA RAZONES ++++++
            // --- 2f. CÁLCULO DE RAZONES ---
            var todasRazones = await db.RazonesFinancieras
                .Where(r => r.IdAnalisis == IdAnalisis)
                .ToListAsync();

            if (todasRazones.Any())
            {
                aniosRazones = todasRazones.Select(r => r.Anio).Distinct().OrderBy(a => a).ToList();
                var grupos = todasRazones.GroupBy(r => r.Grupo);

                // Función local para rellenar las listas
                Func<string, List<ResultadoCalculado>> GetRazonesPorGrupo = (grupo) =>
                {
                    return grupos.FirstOrDefault(g => g.Key == grupo)?
                                 .GroupBy(r => r.NombreRazon)
                                 .Select(g => new ResultadoCalculado { Concepto = g.Key, ValoresPorAnio = g.ToDictionary(r => r.Anio, r => r.ValorRazon) })
                                 .ToList() ?? new();
                };

                razonesLiquidez = GetRazonesPorGrupo("Liquidez");
                razonesActividad = GetRazonesPorGrupo("Actividad");
                razonesEndeudamiento = GetRazonesPorGrupo("Endeudamiento");
                razonesRentabilidad = GetRazonesPorGrupo("Rentabilidad");
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error al cargar los resultados: {ex.Message} | DETALLE: {ex.InnerException?.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }
}